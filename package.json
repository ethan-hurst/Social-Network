  "scripts": {
    "clean-dependancies": "rm -rf node_modules && rm -rf package-lock.json && rm -rf yarn.lock && cd client && rm -rf node_modules && rm -rf package-lock.json && rm -rf yarn.lock && cd ..",
    "dep-install": "npm run clean-dependancies && yarn install && cd client && yarn install && cd ..",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "deploy": "git push heroku master"
  },
